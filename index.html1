<!-- FINAL CELEBRATION -->
<div class="card hidden" id="final">
  <h1>ğŸ† You did it! ğŸ†</h1>
  <h2>7 months + Valentineâ€™s Day ğŸ’•</h2>
  <p>Happy Valentineâ€™s Day and happy 7 months, my love! ğŸ’–</p>
  <div id="letter">
    Dear Elena, ğŸ’Œ<br><br>
    Every moment with you makes my heart smile. These 7 months together have been the happiest of my life.  
    On this Valentineâ€™s Day, I just want you to know how much I love you and how special you are to me.  
    Thank you for being my everything. ğŸ’•<br><br>
    Love always,<br>
    Mark â¤ï¸
  </div>
</div>

<script>
const correctPassword = "07142025";
const music = document.getElementById("music");
const yesBtn = document.getElementById("yesBtn");
const noBtn = document.getElementById("noBtn");

// Countdown
const valentinesDate = new Date("February 14, 2026 00:00:00").getTime();
const countdownEl = document.getElementById("countdown");
setInterval(() => {
  const now = new Date().getTime();
  const diff = valentinesDate - now;
  const d = Math.floor(diff/(1000*60*60*24));
  const h = Math.floor((diff/(1000*60*60))%24);
  const m = Math.floor((diff/(1000*60))%60);
  const s = Math.floor((diff/1000)%60);
  countdownEl.innerHTML = `â³ ${d}d ${h}h ${m}m ${s}s`;
}, 1000);

function unlock() {
  if(document.getElementById("password").value === correctPassword){
    document.getElementById("lock").classList.add("hidden");
    document.getElementById("main").classList.remove("hidden");
    music.play();
    hearts();
    chaosNo(); // start infinite NO chaos
  } else { document.getElementById("error").style.display = "block"; }
}

// Infinite NO button chaos (YES button stays the same)
function chaosNo() {
  noBtn.addEventListener("mouseenter", () => {
    // Move NO button randomly forever
    noBtn.style.left = Math.random()*80 + "%";
    noBtn.style.top = Math.random()*80 + "%";
    // Show animated cat
    showCat();
    // Continue infinite chaos
    setTimeout(() => chaosNo(), 200); // repeat
  });
}

// Animated cat pop-up
function showCat() {
  const cat = document.createElement("img");
  cat.className = "cat";
  cat.src = Math.random() > 0.5 ? 
    "https://media.giphy.com/media/3oriO0OEd9QIDdllqo/giphy.gif" : 
    "https://media.giphy.com/media/JIX9t2j0ZTN9S/giphy.gif";
  cat.style.left = Math.random()*70 + "%";
  cat.style.top = Math.random()*70 + "%";
  document.body.appendChild(cat);
  setTimeout(()=>cat.remove(), 2000);
}

function yes() {
  document.getElementById("main").classList.add("hidden");
  document.getElementById("final").classList.remove("hidden");
  fireworks();
}

function hearts(){
  setInterval(()=>{
    const h=document.createElement("div");
    h.className="heart";
    h.textContent="ğŸ’–";
    h.style.left=Math.random()*100+"vw";
    document.body.appendChild(h);
    setTimeout(()=>h.remove(),4000);
  },300);
}

function fireworks(){
  for(let i=0;i<50;i++){
    const f=document.createElement("div");
    f.className="firework";
    f.textContent="ğŸ†";
    f.style.left=Math.random()*100+"vw";
    f.style.top=Math.random()*100+"vh";
    document.body.appendChild(f);
    setTimeout(()=>f.remove(),1200);
  }
}
</script>
</body>
</html>
