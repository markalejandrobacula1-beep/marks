<style>
body {
  margin: 0;
  height: 100vh;
  background: radial-gradient(circle at top, #ff4d6d, #ff9a9e, #ffd1dc);
  font-family: 'Poppins', Arial, sans-serif;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.card {
  background: rgba(255,255,255,0.95);
  border-radius: 25px;
  padding: 30px;
  width: 90%;
  max-width: 400px;
  text-align: center;
  box-shadow: 0 15px 35px rgba(0,0,0,0.25);
  position: relative;
  z-index: 2;
  transition: all 0.3s ease;
}

h1 { color: #ff3366; margin: 0; }
h2 { color: #ff6699; margin: 5px 0 15px; }
p { color: #333; font-size: 18px; }

input {
  padding: 12px;
  width: 80%;
  border-radius: 12px;
  border: 1px solid #ccc;
  font-size: 16px;
}

button {
  padding: 12px 20px;
  margin-top: 15px;
  border-radius: 12px;
  border: none;
  cursor: pointer;
  background: #ff3366;
  color: white;
  font-size: 16px;
  transition: all 0.2s ease;
}

.hidden { display: none; }

.no {
  background: #ddd;
  color: #333;
  position: absolute;
}

.heart {
  position: absolute;
  font-size: 24px;
  animation: float 4s linear infinite;
}

@keyframes float {
  from { transform: translateY(100vh); opacity: 1; }
  to { transform: translateY(-10vh); opacity: 0; }
}

.firework {
  position: absolute;
  font-size: 30px;
  animation: explode 1.2s ease-out forwards;
}

@keyframes explode {
  0% { transform: scale(0); opacity: 1; }
  100% { transform: scale(3); opacity: 0; }
}

.cat {
  position: absolute;
  width: 80px;
  transition: all 0.3s ease;
  z-index: 5;
}

#countdown {
  font-size: 20px;
  color: #ff3366;
  margin-top: 10px;
}

#letter {
  font-size: 18px;
  color: #ff3366;
  line-height: 1.5;
  text-align: center;
  margin-top: 15px;
}
</style>
</head>
<body>

<audio id="music" loop>
  <source src="https://cdn.pixabay.com/download/audio/2022/03/15/audio_9c5c2f6f55.mp3" type="audio/mpeg">
